    position: absolute;
    font-size: 1.2rem;
    color: white;
    text-shadow: 2px 2px 4px rgba(0,0,0,0.5);
    opacity: 0;
    animation: floatUp 8s ease-out forwards;
    pointer-events: none;
}

@keyframes floatUp {
    0% { transform: translateY(100vh); opacity: 0; }
    20% { opacity: 1; }
    80% { opacity: 1; }
    100% { transform: translateY(-50vh); opacity: 0; }
}

