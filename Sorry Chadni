    align-items: center;
}

.container {
    background: white;
    padding: 40px;
    border-radius: 20px;
    box-shadow: 0 0 40px rgba(0,0,0,0.2);
    position: relative;
    transition: 0.2s;
}

h1 {
    font-size: 30px;
    margin-bottom: 30px;
}

button {
    padding: 12px 30px;
    font-size: 18px;
    border: none;
    border-radius: 30px;
    cursor: pointer;
    margin: 10px;
}

#yes {
    background: #ff1744;
    color: white;
    transition: 0.3s;
}

#yes:hover {
    transform: scale(1.15);
}

#no {
    background: #333;
    color: white;
    position: absolute;
}

.shake {
    animation: shake 0.3s;
}

@keyframes shake {
    0% { transform: translate(0px, 0px); }
    25% { transform: translate(5px, 5px); }
    50% { transform: translate(-5px, 5px); }
    75% { transform: translate(5px, -5px); }
    100% { transform: translate(0px, 0px); }
}

.heart {
    position: fixed;
    color: red;
    font-size: 20px;
    animation: float 4s linear infinite;
    pointer-events: none; /* Make hearts unclickable */
}

