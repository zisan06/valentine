<body>

<div class="container" id="box">
    <h1 id="question">Do You Love Me? ‚ù§Ô∏è</h1>
    <button id="yes">YES ‚ù§Ô∏è</button>
    <button id="no">NO üíî</button>
</div>

<script>
const noBtn = document.getElementById("no");
const yesBtn = document.getElementById("yes");
const box = document.getElementById("box");
const question = document.getElementById("question");

const messages = [
    "Think Again üòè",
    "Are You Sure? üò∂",
    "Last Chance üòà",
    "Don't Break My Heart üíî",
    "Please Say YES ü•∫"
];

let msgIndex = 0;

function moveNoButton() {
    const x = Math.random() * (window.innerWidth - 100);
    const y = Math.random() * (window.innerHeight - 50);
    noBtn.style.left = x + "px";
    noBtn.style.top = y + "px";

    box.classList.add("shake");
    setTimeout(() => box.classList.remove("shake"), 300);

    question.innerText = messages[msgIndex];
    msgIndex = (msgIndex + 1) % messages.length;
}

noBtn.addEventListener("mouseover", moveNoButton);
noBtn.addEventListener("click", moveNoButton);
noBtn.addEventListener("touchstart", moveNoButton);

const loveMessages = [
    "You are the best thing that ever happened to me.",
    "Every moment with you is a treasure.",
    "My heart beats only for you, Chadni.",
    "You complete me in every way.",
    "Forever and always, my love.",
    "With you, every day is Valentine's Day."
];

function createFloatingMessages() {
    loveMessages.forEach((msg, index) => {
        setTimeout(() => {
            const messageDiv = document.createElement("div");
            messageDiv.classList.add("floating-message");
            messageDiv.innerText = msg;
            messageDiv.style.left = `${Math.random() * 80 + 10}vw`; // Random horizontal position
            messageDiv.style.animationDelay = `${index * 2}s`; // Staggered animation start
            document.body.appendChild(messageDiv);

            // Remove message after animation ends
            messageDiv.addEventListener('animationend', () => {
                messageDiv.remove();
            });
        }, index * 2000); // Stagger message creation
    });
}


yesBtn.addEventListener("click", function() {
    document.body.innerHTML = `
    <h1 style="margin-top:20%;font-family:Arial; color: white; text-shadow: 2px 2px 4px rgba(0,0,0,0.5);">
        I LOVE YOU TOO CHADNI ü•∞‚ù§Ô∏è
    </h1>
    `;
    
    // Start confetti
    let duration = 3 * 1000;
    let end = Date.now() + duration;

    (function frame() {
        confetti({
            particleCount: 7,
            angle: 60,
            spread: 55,
            origin: { x: 0 }
        });
        confetti({
            particleCount: 7,
            angle: 120,
            spread: 55,
            origin: { x: 1 }
        });

        if (Date.now() < end) {
            requestAnimationFrame(frame);
        }
    }());

    // Start floating love messages
    createFloatingMessages();

    // Stop continuous heart creation (optional)
    clearInterval(heartInterval);
});

let heartInterval; // Declare global for clearInterval
function createHeart() {
    const heart = document.createElement("div");
    heart.classList.add("heart");
    heart.innerHTML = "‚ù§Ô∏è";
    heart.style.left = Math.random() * 100 + "vw";
    heart.style.fontSize = (Math.random() * 20 + 10) + "px";
    document.body.appendChild(heart);

    setTimeout(() => {
        heart.remove();
    }, 4000);
}

heartInterval = setInterval(createHeart, 400); // Assign to global variable
</script>

</body>
